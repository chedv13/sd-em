{
  "compilerOptions": {
    "lib": [
      "DOM"
    ],
    "allowJs": true,
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": true,
    "target": "es6",
    "module": "es6",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*"
  ]
}
